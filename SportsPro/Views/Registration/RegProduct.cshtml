@model MgrRegistrationModel
@{
    ViewData["Title"] = "Registrations";
}

<h1>Customer: @ViewBag.CustomerName</h1>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model.CustomerProducts)
            {
                <tr>
                    <td>@cust.Product.Name<td>
                        <form asp-action="Delete" asp-route-id="@cust.ProductID" asp method="get">
                            <input type="hidden" name="ProductID" value="@cust.ProductID" />
                            <input type="hidden" name="CustomerID" value="@cust.CustomerID" />
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </form>
                    </tr>
            }
        </tbody>
    </table>

    <form asp-action="RegProduct" method="post">
        <input type="hidden" asp-for="CustomerID" />
        <div class="form-group">
            <label name="Product" class="control-label"></label>
            <select name="ProductID" type="number" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))">
                <option value="">Select a product...</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Select" class="btn btn-primary" />
        </div>
    </form>
