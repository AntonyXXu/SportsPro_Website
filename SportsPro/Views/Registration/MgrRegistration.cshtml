@model MgrRegisration
@{
    ViewData["Title"] = "Registrations";
}

<h1>Customer: @ViewBag.CustomerName</h1>

{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name<td>
                    <td></td>
                    <td>
                        <form asp-action="EditTech" asp-route-id="@product.ProductID" asp method="get">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
<a asp-controller="Incident" asp-action="ListByTech"
   class="btn btn-primary">Back</a>